{
  "version": 2,  // Specifies the Vercel configuration version.
  "builds": [
    {
      "src": "server.js", // Defines the entry point for the backend.
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/routes/(.*)", // Routes requests that start with '/routes' to index.js.
      "dest": "server.js"
    },
    {
      "src": "/(.*)", // Routes all other requests to index.js.
      "dest": "server.js"
    }
  ]
}
